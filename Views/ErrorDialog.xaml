<Window x:Class="ProductManagement.WPF.Views.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="ErrorTextBox" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" 
                 IsReadOnly="True" 
                 Margin="10" 
                 AcceptsReturn="True" />
        <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,10,10" Click="CloseButton_Click"/>
    </Grid>
</Window>
